<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".order.menu.XanaduMenu.Masa1.XanaduSpaghete.XanaduSpagheteCarbonara1Activity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/iv_cart"
        android:text="Cart:"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_cart"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/ic_baseline_shopping_cart_24"
        android:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Spaghete_carbonara_iv"
        android:layout_width="285dp"
        android:layout_height="305dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_back"
        app:srcCompat="@drawable/spaghete_carbonara" />

    <TextView
        android:id="@+id/tv_spaghetti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Spaghetti:"
        android:textColor="#FF6813"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Spaghete_carbonara_iv" />

    <TextView
        android:id="@+id/tv_spaghete_carbonara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Spaghete Carbonara"
        android:textColor="#091020"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tv_spaghetti"
        app:layout_constraintTop_toBottomOf="@+id/tv_spaghetti" />

    <TextView
        android:id="@+id/tv_cant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:lineSpacingExtra="2dp"
        android:text="350g"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_spaghete_carbonara" />

    <TextView
        android:id="@+id/tv_descriere"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/gray"
        android:text="Bacon, parmezan, panna, ou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cant" />


    <ImageView
        android:id="@+id/minus_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/img_add_to_cart"
        app:srcCompat="@drawable/ic_minus" />

    <TextView
        android:id="@+id/tv_cantitate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="1"
        android:textColor="#272670"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/minus_iv"
        app:layout_constraintStart_toEndOf="@+id/minus_iv"
        app:layout_constraintTop_toTopOf="@+id/minus_iv" />

    <ImageView
        android:id="@+id/plus_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cantitate"
        app:layout_constraintStart_toEndOf="@+id/tv_cantitate"
        app:layout_constraintTop_toTopOf="@+id/tv_cantitate"
        app:srcCompat="@drawable/ic_plus" />

    <TextView
        android:id="@+id/tv_pret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textColor="#272670"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/plus_iv"
        app:layout_constraintEnd_toStartOf="@+id/tv_ron"
        android:layout_marginEnd="7dp"
        app:layout_constraintTop_toTopOf="@+id/plus_iv" />

    <TextView
        android:id="@+id/tv_ron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="RON"
        android:textColor="#272670"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/plus_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/plus_iv" />

    <ImageView
        android:id="@+id/img_add_to_cart"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_group_1675" />

</androidx.constraintlayout.widget.ConstraintLayout>